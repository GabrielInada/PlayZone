BACKEND_PORT=3000
BACKEND_URL=http://localhost:3000

# Opções de ambiente: development, production, test 
# (olha a doc oficial do NestJS para mais detalhes sobre cada ambiente)
NODE_ENV=development

# Acesso ao postgres 
DATABASE_PORT=5432
DATABASE_URL=
# Em produção (ex: Vercel), use false para evitar conflitos de schema em cold starts paralelos
DB_SYNCHRONIZE=true

# JWT
JWT_SECRET=

# Bootstrap do primeiro admin (opcional)
# acredite ou não foi a opção mais fácil para criar o primeiro admin sem precisar de um script separado)
# Ative como true apenas para criar o admin inicial no startup; depois volte para false.
BOOTSTRAP_ADMIN_ENABLED=false
# Só use true quando NODE_ENV=production e você realmente quiser permitir bootstrap em produção.
BOOTSTRAP_ADMIN_ALLOW_IN_PRODUCTION=false
BOOTSTRAP_ADMIN_NAME=
BOOTSTRAP_ADMIN_EMAIL=
BOOTSTRAP_ADMIN_PASSWORD=
BOOTSTRAP_ADMIN_TYPE=delegado